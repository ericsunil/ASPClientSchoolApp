@model ASPClientSchoolApp.Models.PersonnelTable

@{
    ViewBag.Title = "AddorEdit";
    Layout = null;
}

@using (Html.BeginForm("AddorEdit", "Personnel", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_resetUrl = Url.Action("AddorEdit", "Personnel", new { id = 0 }) })) //data-resetUrl
{
    @Html.AntiForgeryToken()

<div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PersonnelID)
    <div class="col-sm-6 b-r">
        <div class="form-group">
            @Html.LabelFor(model => model.TypeToken, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.TypeToken, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TypeToken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DesignationToken, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.DesignationToken, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DesignationToken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="col-sm-6">
        <div class="form-group hidden-lg hidden-md hidden-sm hidden-xs">
            @Html.LabelFor(model => model.ImageToken, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.ImageToken, new { htmlAttributes = new { @class = "form-control", @Value="1111" } })
                @Html.ValidationMessageFor(model => model.ImageToken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label" })
            
            <div>
                <img src="@Url.Content(Model.ImagePath)" style="margin: 10px; height:200px; width:auto;" id="imagePreview" />
                <div class="clearfix"></div>
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <span class="btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><input type="file" name="ImageUpload" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview')"></span>
                    <span class="fileinput-filename"></span>
                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">&times;</a>
                </div>
            </div>
            @*<div>
                <img src="@Url.Content(Model.ImagePath)" style="margin: 10px; height:200px; width:auto;" id="imagePreview" />
                <input type="file" name="ImageUpload" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview')" />
            </div>*@
        </div>
    </div>
    <div class="clearfix"></div>
    <div>
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Save</strong></button>
    </div>
</div>

   

   

    

    
