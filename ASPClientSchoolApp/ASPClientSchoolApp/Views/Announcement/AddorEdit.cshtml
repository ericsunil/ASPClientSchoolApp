@model ASPClientSchoolApp.Models.AnnouncementTable

@{
    ViewBag.Title = "AddorEdit";
    Layout = null;
}




@using (Html.BeginForm("AddorEdit", "Announcement", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_resetUrl = Url.Action("AddorEdit", "Announcement", new { id = 0 }) })) //data-resetUrl
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AnnouncementID)

    <div class="form-group">
        @Html.LabelFor(model => model.MCD, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.MCD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the Title Here..." } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Save</strong></button>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
