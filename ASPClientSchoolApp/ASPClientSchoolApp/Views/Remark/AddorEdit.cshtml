@model ASPClientSchoolApp.Models.RemarkTable

@{
    ViewBag.Title = "AddorEdit";
    Layout = null;
}



@using (Html.BeginForm("AddorEdit", "Remark", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_resetUrl = Url.Action("AddorEdit", "Remark", new { id = 0 }) })) //data-resetUrl
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RemarkID)

    <div class="form-group">
        @Html.LabelFor(model => model.StudentToken, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.StudentToken, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentToken, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TeacherToken, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.TeacherToken, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TeacherToken, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCD, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.MCD, new { htmlAttributes = new { @class = "form-control", @Value = "1276" } })
            @Html.ValidationMessageFor(model => model.MCD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder="Title here ..." } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows="8", placeholder="Description here ..." })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>



    <div>
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Save</strong></button>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
