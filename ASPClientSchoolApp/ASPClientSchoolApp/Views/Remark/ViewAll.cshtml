@model IEnumerable<ASPClientSchoolApp.Models.RemarkTable>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example" id="dataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentToken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherToken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MCD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th>Action</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MCD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a class="btn btn-success" onclick="Edit('@Url.Action("AddorEdit", "Remark", new { id=@item.RemarkID })')"> <i class="fa fa-edit"></i> Edit</a>
                    <a class="btn btn-danger" onclick="Delete('@Url.Action("Delete", "Remark", new { id=@item.RemarkID })')"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
