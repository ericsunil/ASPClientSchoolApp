@model ASPClientSchoolApp.Models.ReminderTable

@{
    ViewBag.Title = "AddorEdit";
    Layout = null;
}



@using (Html.BeginForm("AddorEdit", "Reminder", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_resetUrl = Url.Action("AddorEdit", "Reminder", new { id = 0 }) })) //data-resetUrl
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReminderID)


    <div class="form-group">
        @Html.LabelFor(model => model.EventTypeToken, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.EventTypeToken, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventTypeToken, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCD, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.MCD, new { htmlAttributes = new { @class = "form-control", @Value="1276" } })
            @Html.ValidationMessageFor(model => model.MCD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", rows="8", placeholder="Detail Here ..." })
            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
        </div>
    </div>



    <div>
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Save</strong></button>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
